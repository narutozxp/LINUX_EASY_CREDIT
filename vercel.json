{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": null,
  "buildCommand": null,
  "outputDirectory": null,
  "rewrites": [
    {
      "source": "/api/create_order.php",
      "destination": "/api/create-order"
    },
    {
      "source": "/api/query_order.php",
      "destination": "/api/query-order"
    },
    {
      "source": "/api/notify.php",
      "destination": "/api/notify"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
